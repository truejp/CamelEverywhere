            app:destination="@id/calculatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.truejp.camelcalculator.CalculatorFragment"
        android:label="Wie viele Kamele bin ich wert?" >
